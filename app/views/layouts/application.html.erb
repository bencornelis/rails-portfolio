<!DOCTYPE html>
<html>
<head>
  <title>Portfolio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="row">
  <div class="nav-bar">
    <ul class="list-unstyled list-inline pull-left">
      <li class="nav-item"><%= link_to "Home", skills_path %></li>
      <li class="nav-item"><%= link_to "Blog", posts_path %></li>
      <% if current_user && current_user.admin? %>
        <li class="nav-item"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      <% end %>
    </ul>
    <span class="pull-right notice">
      <%= render "layouts/alert" %>
      <%= render "layouts/success" %>
    </span>
  </div>
</div>
<div class="row main">
  <%= yield %>
</div>
</div>

</body>
</html>
