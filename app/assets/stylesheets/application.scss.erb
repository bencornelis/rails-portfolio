 @import "bootstrap-sprockets";
 @import "bootstrap";

.main {
  margin-top: 30px;
}

#profile-pic {
  background-image: url(<%= asset_path('profile.jpg') %>);
  width: 150px;
  height: 150px;
  border-radius: 50%;
  margin: 30px;
}

.nav-bar {
  margin-left: 30px;
  margin-top: 10px;
}

.nav-item {
  text-align: center;
  background-color: #6F8FA2;
  margin: 5px;
  padding: 0 !important;
}

.nav-item span {
  padding: 10px;
  width: 100%;
}

.nav-item a {
  padding:0;
  margin:0;
}

.nav-item:hover {
  opacity: 0.5;
  background-color: black;
  cursor: pointer;
}

.nav-item:active {
  opacity: 0.5;
  background-color: black;
}

.nav-item a {
  color: white !important;
}

.nav-item a:hover {
  text-decoration: none !important;
}

.notice {
  margin-right:25px;
}

textarea {
  resize: none;
}

.crud-link {
  font-size: 14px !important;
  margin-top:10px;
}

.top-margin {
  margin-top: 100px;
}

.separator {
  min-height: 500px;
  width: 2px;
  float:left;
  background-color: #6F8FA2;
}

.item {
  margin:20px;
}

.post {
  min-height: 400px;
}

.comment {
  border-bottom: 2px solid #6F8FA2;
  padding: 20px;
}

.comment-text {
  padding: 15px;
}

.comments {
  margin-bottom: 50px;
}

.weak {
  opacity: 0.5;
}
